@import pictureStripe
@import organizerStripe
@import contestantsStripe

body
  font-size: 18px
  line-height: 140%
  font-family: 'Roboto', 'Roboto Slab'
  background: #eee

.content
  margin-top: 15px
  padding: 15px
  background-color: #fff

[role="page-container"]
  .page
    padding-top: 40px
  @media (max-width: 767px)
    background: #eee
.navbar
  .navbar-header a
    color: #333333
  .navbar-right
    a
      color: #333333
      border-bottom: 2px solid transparent;
      &:hover
        background-color: transparent !important
        border-color: #333333
    .active a
      border-color: #333333

  &.nav-scrolled
    background-color: rgba(0, 0, 0, 0.7)
    a, .navbar-header, .navbar-right a
      color: #F6F6F6
      &:hover
        border-color: #F6F6F6
    .active a
      border-color: #F6F6F6
.footer
  h2
    font-family: 'Roboto Slab'
  background-color: #ABB7B7
  img
    padding: 15px
    width: 100%
    height: auto
.stripe
  padding: 0.7em
  h2
    font-family: 'Roboto Slab'
    font-size: 3.5em
.teams
  .content
    margin: 15px 0
  .team.member.image
    position: relative
    height: 25em
    .img-responsive
      position: absolute
      top: 50%
      transform: translateY(-50%)
