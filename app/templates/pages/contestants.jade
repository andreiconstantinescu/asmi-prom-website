                li(data-target='#teamAsmi', data-slide-to='6')
              .carousel-inner(style="max-width: 80%; max-height: 80%")
                each team, index in teams.asmi
                  each person in team
                    if (person.name === 'Serban Marius Bogdan')
                      .item.active(style="margin-left: 25%")
                        img(src='#{person.images[0]}', style="width: 100%; max-height: 100%; height: 100%")
                        .carousel-caption.hidden-xs
                          h3= person.name
                    else
                      .item(style="margin-left: 25%")
                        img(src='#{person.images[0]}', style="width: 100%; max-height: 100%; height: 100%")
                        .carousel-caption.hidden-xs
                          h3= person.name
              a.left.carousel-control(href='#teamAsmi', data-slide='prev', style="background: none")
                span.glyphicon.glyphicon-chevron-left
              a.right.carousel-control(href='#teamAsmi', data-slide='next', style="background: none")
                span.glyphicon.glyphicon-chevron-right
